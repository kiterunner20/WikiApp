<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="title" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
    </style>

    <style name="description" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/color_grey_text</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
    </style>


    <style name="history" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
    </style>

    <style name="toolbarheading" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_xxlarge</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
    </style>

    <style name="search" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/search_wiki</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dim_grey</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="fontFamily">@font/robotoslab_regular</item>
    </style>

</resources>
